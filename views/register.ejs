<%
// SEO metadata for register page
const pageTitle = '新規登録 - Synapse Note | AI学習アプリを始める';
const pageDescription = 'Synapse Noteに新規登録して、AIが生成するオリジナル問題集で学習を開始。無料アカウント作成で、あなただけの問題集を作成できます。';
const pageKeywords = '新規登録,アカウント作成,AI学習,無料登録,Synapse Note,問題集作成';
const pageRobots = 'index,follow';
const canonicalUrl = 'https://synapse-note.vercel.app/register';
const ogType = 'website';
%>
<%- include('partials/header') %>

<main>
    <div class="auth-container">
        <h2 class="page-title">新規登録</h2>

        <% if (error) { %>
        <div class="error-message">
            <%= error %>
        </div>
        <% } %>

        <% if (registrationMessage) { %>
        <div class="info-message">
            <%= registrationMessage %>
        </div>
        <% } %>

        <form action="/register" method="POST">
            <div class="form-group">
                <label for="username">ユーザー名（表示名）</label>
                <input type="text" id="username" name="username" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="handle">ハンドル名（ログインID）</label>
                <input type="text" id="handle" name="handle" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">パスワード</label>
                <input type="password" id="password" name="password" required autocomplete="off">
            </div>
            <button type="submit">登録する</button>
        </form>

        <p class="form-footer-text">
            すでにアカウントをお持ちですか？ <a href="/login">ログインはこちら</a>
        </p>
    </div>
</main>

<%- include('partials/footer') %>