<%- include('partials/header') %>

<div class="match-detail-container">
    <div class="match-header">
        <h2 class="match-title"><%= match.title %></h2>
        <div class="match-badges">
            <span class="format-badge <%= match.format.toLowerCase() %>"><%= match.format %></span>
            <span class="status-badge <%= match.status %>">
                <% if (match.status === 'waiting') { %>
                    待機中
                <% } else if (match.status === 'in_progress') { %>
                    進行中
                <% } else if (match.status === 'completed') { %>
                    完了
                <% } %>
            </span>
        </div>
    </div>

    <div class="match-overview">
        <div class="match-info-card">
            <h3>試合情報</h3>
            <div class="info-grid">
                <div class="info-item">
                    <strong>形式:</strong> <%= match.format %> 
                    <span class="format-description">
                        (<%= match.format === 'BO3' ? '2勝で勝利' : '3勝で勝利' %>)
                    </span>
                </div>
                <div class="info-item">
                    <strong>参加者数:</strong> <%= match.participants.length %>人
                </div>
                <div class="info-item">
                    <strong>使用クイズ数:</strong> <%= match.quizzes ? match.quizzes.length : 0 %>個
                </div>
                <div class="info-item">
                    <strong>作成日:</strong> <%= match.createdAt ? match.createdAt.toLocaleDateString('ja-JP') : '不明' %>
                </div>
            </div>
        </div>

        <% if (match.status === 'completed' && match.winner) { %>
            <div class="winner-card">
                <h3>🏆 勝者</h3>
                <div class="winner-info">
                    <% if (match.winner === user.uid) { %>
                        <span class="winner-you">あなたの勝利！</span>
                    <% } else { %>
                        <span class="winner-other">相手の勝利</span>
                    <% } %>
                </div>
            </div>
        <% } %>
    </div>

    <% if (match.status === 'waiting') { %>
        <div class="waiting-section">
            <div class="waiting-card">
                <h3>対戦相手を待っています</h3>
                <p>この試合はまだ対戦相手を待っています。他のユーザーがこの試合に参加するか、直接招待してください。</p>
                <div class="match-url">
                    <strong>試合URL:</strong>
                    <input type="text" readonly value="<%= `${req.protocol}://${req.get('host')}/quiz/match/${match.id}` %>" id="matchUrl">
                    <button onclick="copyMatchUrl()" class="btn btn-secondary btn-sm">コピー</button>
                </div>
            </div>
        </div>
    <% } %>

    <div class="rounds-section">
        <h3>ラウンド履歴</h3>
        
        <% if (!match.rounds || match.rounds.length === 0) { %>
            <div class="no-rounds">
                <p>まだラウンドが開始されていません。</p>
                <% if (match.status === 'in_progress' && match.participants.length >= 2) { %>
                    <a href="/quiz/<%= match.quizzes[0] %>?matchId=<%= match.id %>" class="btn btn-primary">
                        ラウンド1を開始
                    </a>
                <% } %>
            </div>
        <% } else { %>
            <div class="rounds-list">
                <% match.rounds.forEach((round, index) => { %>
                    <div class="round-card">
                        <div class="round-header">
                            <span class="round-number">ラウンド <%= index + 1 %></span>
                            <span class="round-date">
                                <%= round.completedAt ? new Date(round.completedAt.seconds * 1000).toLocaleDateString('ja-JP') : '進行中' %>
                            </span>
                        </div>
                        
                        <div class="round-results">
                            <% if (round.participants && round.participants.length > 0) { %>
                                <% round.participants.forEach(participant => { %>
                                    <div class="participant-result <%= participant.userId === user.uid ? 'your-result' : '' %>">
                                        <span class="participant-name">
                                            <%= participant.userId === user.uid ? 'あなた' : '相手' %>
                                        </span>
                                        <span class="participant-score">
                                            <%= participant.score || 0 %>/<%= participant.maxScore || 0 %>点
                                        </span>
                                        <% if (round.winner === participant.userId) { %>
                                            <span class="round-winner">🏆</span>
                                        <% } %>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>
                        
                        <% if (round.quizTitle) { %>
                            <div class="round-quiz">
                                使用クイズ: <%= round.quizTitle %>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
            
            <% if (match.status === 'in_progress' && match.rounds.length < (match.format === 'BO3' ? 5 : 9)) { %>
                <% const nextRoundIndex = match.rounds.length; %>
                <% if (nextRoundIndex < match.quizzes.length) { %>
                    <div class="next-round">
                        <h4>次のラウンド</h4>
                        <a href="/quiz/<%= match.quizzes[nextRoundIndex] %>?matchId=<%= match.id %>" class="btn btn-primary btn-lg">
                            ラウンド<%= nextRoundIndex + 1 %>を開始
                        </a>
                    </div>
                <% } %>
            <% } %>
        <% } %>
    </div>

    <div class="match-actions">
        <a href="/quiz/matches" class="btn btn-secondary">試合一覧に戻る</a>
        <% if (match.status === 'completed') { %>
            <button onclick="shareMatch()" class="btn btn-primary">結果をシェア</button>
        <% } %>
    </div>
</div>

<script>
function copyMatchUrl() {
    const urlInput = document.getElementById('matchUrl');
    urlInput.select();
    document.execCommand('copy');
    
    const button = event.target;
    const originalText = button.textContent;
    button.textContent = 'コピー完了！';
    button.style.backgroundColor = '#28a745';
    
    setTimeout(() => {
        button.textContent = originalText;
        button.style.backgroundColor = '';
    }, 2000);
}

function shareMatch() {
    const matchTitle = '<%= match.title %>';
    const result = '<%= match.winner === user.uid ? "勝利" : "敗北" %>';
    const text = `${matchTitle}の結果: ${result}でした！`;
    
    if (navigator.share) {
        navigator.share({
            title: 'Synapse Note - 試合結果',
            text: text,
            url: window.location.href
        });
    } else {
        // フォールバック: クリップボードにコピー
        navigator.clipboard.writeText(text + ' ' + window.location.href).then(() => {
            alert('結果がクリップボードにコピーされました！');
        });
    }
}
</script>

