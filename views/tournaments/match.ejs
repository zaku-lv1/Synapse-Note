<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Synapse Note</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar', { user: user }) %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/tournaments">大会一覧</a></li>
                        <li class="breadcrumb-item"><a href="/tournaments/<%= match.tournamentId %>">大会詳細</a></li>
                        <li class="breadcrumb-item active">試合詳細</li>
                    </ol>
                </nav>

                <!-- Match Header -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h1 class="card-title">
                                    <i class="fas fa-gamepad"></i> 試合詳細
                                </h1>
                                <h4>ラウンド <%= match.round %> - 試合 <%= match.matchNumber %></h4>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="badge bg-<%= getMatchStatusColor(match.status) %> fs-6">
                                    <%= getMatchStatusText(match.status) %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Match Details -->
                <div class="row">
                    <div class="col-md-8">
                        <!-- Participants -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h3><i class="fas fa-users"></i> 対戦者</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="text-center p-3 border rounded">
                                            <% if (participant1) { %>
                                            <i class="fas fa-user-circle fa-3x text-primary mb-2"></i>
                                            <h5><%= participant1.username || 'プレイヤー1' %></h5>
                                            <small class="text-muted"><%= participant1.handle || participant1.id %></small>
                                            <% } else { %>
                                            <i class="fas fa-user-circle fa-3x text-muted mb-2"></i>
                                            <h5>プレイヤー1</h5>
                                            <small class="text-muted">ID: <%= match.participant1Id %></small>
                                            <% } %>
                                            <% if (match.winnerId === match.participant1Id) { %>
                                            <div class="mt-2">
                                                <i class="fas fa-crown text-warning"></i>
                                                <span class="text-warning fw-bold">勝者</span>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex align-items-center justify-content-center">
                                        <h2 class="text-muted">VS</h2>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="text-center p-3 border rounded">
                                            <% if (participant2) { %>
                                            <i class="fas fa-user-circle fa-3x text-primary mb-2"></i>
                                            <h5><%= participant2.username || 'プレイヤー2' %></h5>
                                            <small class="text-muted"><%= participant2.handle || participant2.id %></small>
                                            <% } else { %>
                                            <i class="fas fa-user-circle fa-3x text-muted mb-2"></i>
                                            <h5>プレイヤー2</h5>
                                            <small class="text-muted">ID: <%= match.participant2Id %></small>
                                            <% } %>
                                            <% if (match.winnerId === match.participant2Id) { %>
                                            <div class="mt-2">
                                                <i class="fas fa-crown text-warning"></i>
                                                <span class="text-warning fw-bold">勝者</span>
                                            </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quiz Information -->
                        <% if (quiz) { %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h3><i class="fas fa-question-circle"></i> 使用クイズ</h3>
                            </div>
                            <div class="card-body">
                                <h5><%= quiz.title %></h5>
                                <p class="text-muted"><%= quiz.description || '説明なし' %></p>
                                <p>
                                    <strong>問題数:</strong> <%= quiz.questions ? quiz.questions.length : 0 %>問<br>
                                    <strong>作成者:</strong> <%= quiz.ownerId %>
                                </p>
                                
                                <% if (user && (match.participant1Id === user.id || match.participant2Id === user.id) && match.status === 'in_progress') { %>
                                <a href="/quiz/<%= quiz.id %>" class="btn btn-primary">
                                    <i class="fas fa-play"></i> クイズに挑戦
                                </a>
                                <% } %>
                            </div>
                        </div>
                        <% } %>

                        <!-- Match Results -->
                        <% if (match.scores && Object.keys(match.scores).length > 0) { %>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h3><i class="fas fa-trophy"></i> 試合結果</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <% for (const [userId, score] of Object.entries(match.scores)) { %>
                                    <div class="col-md-6">
                                        <div class="p-3 border rounded mb-2">
                                            <h6>
                                                <%= userId === match.participant1Id ? (participant1?.username || 'プレイヤー1') : (participant2?.username || 'プレイヤー2') %>
                                            </h6>
                                            <div class="fs-4 fw-bold text-primary">
                                                <%= score.totalScore || 0 %>点
                                            </div>
                                            <small class="text-muted">
                                                正解: <%= score.correctAnswers || 0 %>/<%= score.totalQuestions || 0 %>問
                                            </small>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>

                    <div class="col-md-4">
                        <!-- Match Info -->
                        <div class="card">
                            <div class="card-header">
                                <h4><i class="fas fa-info-circle"></i> 試合情報</h4>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <strong>ステータス:</strong><br>
                                    <span class="badge bg-<%= getMatchStatusColor(match.status) %>">
                                        <%= getMatchStatusText(match.status) %>
                                    </span>
                                </div>

                                <% if (match.scheduledAt) { %>
                                <div class="mb-3">
                                    <strong>予定日時:</strong><br>
                                    <%= new Date(match.scheduledAt).toLocaleString('ja-JP') %>
                                </div>
                                <% } %>

                                <% if (match.startedAt) { %>
                                <div class="mb-3">
                                    <strong>開始日時:</strong><br>
                                    <%= new Date(match.startedAt).toLocaleString('ja-JP') %>
                                </div>
                                <% } %>

                                <% if (match.completedAt) { %>
                                <div class="mb-3">
                                    <strong>終了日時:</strong><br>
                                    <%= new Date(match.completedAt).toLocaleString('ja-JP') %>
                                </div>
                                <% } %>

                                <% if (user && (match.participant1Id === user.id || match.participant2Id === user.id) && match.status === 'scheduled') { %>
                                <button onclick="startMatch()" class="btn btn-success w-100">
                                    <i class="fas fa-play"></i> 試合開始
                                </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function startMatch() {
            if (!confirm('試合を開始しますか？')) {
                return;
            }

            try {
                const response = await fetch(`/tournaments/matches/<%= match.id %>/start`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.error || 'エラーが発生しました。');
                }
            } catch (error) {
                console.error('Error starting match:', error);
                alert('ネットワークエラーが発生しました。');
            }
        }
    </script>

    <%
    function getMatchStatusColor(status) {
        switch(status) {
            case 'scheduled': return 'primary';
            case 'in_progress': return 'warning';
            case 'completed': return 'success';
            case 'cancelled': return 'danger';
            default: return 'secondary';
        }
    }

    function getMatchStatusText(status) {
        switch(status) {
            case 'scheduled': return '予定';
            case 'in_progress': return '進行中';
            case 'completed': return '完了';
            case 'cancelled': return '中止';
            default: return '不明';
        }
    }
    %>
</body>
</html>