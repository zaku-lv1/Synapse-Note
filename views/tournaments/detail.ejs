<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Synapse Note</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/navbar', { user: user }) %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/tournaments">大会一覧</a></li>
                        <li class="breadcrumb-item active"><%= tournament.name %></li>
                    </ol>
                </nav>

                <!-- Tournament Header -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h1 class="card-title">
                                    <i class="fas fa-trophy"></i> <%= tournament.name %>
                                </h1>
                                <p class="card-text"><%= tournament.description %></p>
                            </div>
                            <div class="col-md-4 text-end">
                                <span class="badge bg-<%= getStatusColor(tournament.status) %> fs-6 mb-2">
                                    <%= getStatusText(tournament.status) %>
                                </span>
                                <% if (user && user.isAdmin && tournament.status === 'upcoming') { %>
                                <div>
                                    <button onclick="startTournament()" class="btn btn-success">
                                        <i class="fas fa-play"></i> 大会開始
                                    </button>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-3">
                                <strong>開催期間:</strong><br>
                                <% if (tournament.startDate) { %>
                                <%= new Date(tournament.startDate).toLocaleDateString('ja-JP') %>
                                <% } else { %>
                                未定
                                <% } %>
                                <% if (tournament.endDate) { %>
                                〜<%= new Date(tournament.endDate).toLocaleDateString('ja-JP') %>
                                <% } %>
                            </div>
                            <div class="col-md-3">
                                <strong>参加者:</strong><br>
                                <%= participants.length %>/<%= tournament.maxParticipants %>名
                            </div>
                            <div class="col-md-3">
                                <strong>参加費:</strong><br>
                                <% if (tournament.entryFee > 0) { %>
                                ¥<%= tournament.entryFee %>
                                <% } else { %>
                                無料
                                <% } %>
                            </div>
                            <div class="col-md-3">
                                <strong>形式:</strong><br>
                                <%= tournament.rules?.format === 'single_elimination' ? 'シングルエリミネーション' : 'その他' %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Participants -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3><i class="fas fa-users"></i> 参加者</h3>
                    </div>
                    <div class="card-body">
                        <% if (participants && participants.length > 0) { %>
                        <div class="row">
                            <% participants.forEach(participant => { %>
                            <div class="col-md-6 col-lg-4 mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-circle fa-2x text-muted me-2"></i>
                                    <div>
                                        <div class="fw-bold">参加者 ID: <%= participant.userId %></div>
                                        <small class="text-muted">
                                            登録日: <%= new Date(participant.registeredAt).toLocaleDateString('ja-JP') %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                        <% } else { %>
                        <p class="text-muted">まだ参加者がいません。</p>
                        <% } %>
                        
                        <% if (tournament.status === 'upcoming' && user && participants.length < tournament.maxParticipants) { %>
                        <hr>
                        <button onclick="joinTournament()" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> 大会に参加
                        </button>
                        <% } %>
                    </div>
                </div>

                <!-- Matches -->
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-gamepad"></i> 試合</h3>
                    </div>
                    <div class="card-body">
                        <% if (matches && matches.length > 0) { %>
                        <% 
                        const matchesByRound = {};
                        matches.forEach(match => {
                            if (!matchesByRound[match.round]) {
                                matchesByRound[match.round] = [];
                            }
                            matchesByRound[match.round].push(match);
                        });
                        %>
                        
                        <% Object.keys(matchesByRound).sort().forEach(round => { %>
                        <h4>ラウンド <%= round %></h4>
                        <div class="row mb-4">
                            <% matchesByRound[round].forEach(match => { %>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="card-title mb-0">試合 <%= match.matchNumber %></h6>
                                            <span class="badge bg-<%= getMatchStatusColor(match.status) %>">
                                                <%= getMatchStatusText(match.status) %>
                                            </span>
                                        </div>
                                        
                                        <div class="match-participants">
                                            <div class="d-flex justify-content-between align-items-center py-2">
                                                <span>Player <%= match.participant1Id.substring(0, 8) %>...</span>
                                                <% if (match.winnerId === match.participant1Id) { %>
                                                <i class="fas fa-crown text-warning"></i>
                                                <% } %>
                                            </div>
                                            <div class="text-center">VS</div>
                                            <div class="d-flex justify-content-between align-items-center py-2">
                                                <span>Player <%= match.participant2Id.substring(0, 8) %>...</span>
                                                <% if (match.winnerId === match.participant2Id) { %>
                                                <i class="fas fa-crown text-warning"></i>
                                                <% } %>
                                            </div>
                                        </div>
                                        
                                        <% if (match.scheduledAt) { %>
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i> 
                                            <%= new Date(match.scheduledAt).toLocaleString('ja-JP') %>
                                        </small>
                                        <% } %>
                                        
                                        <div class="mt-2">
                                            <a href="/tournaments/matches/<%= match.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> 詳細
                                            </a>
                                            <% if (user && (match.participant1Id === user.id || match.participant2Id === user.id) && match.status === 'scheduled') { %>
                                            <button onclick="startMatch('<%= match.id %>')" class="btn btn-sm btn-success">
                                                <i class="fas fa-play"></i> 開始
                                            </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                        <% }); %>
                        <% } else { %>
                        <p class="text-muted">まだ試合が組まれていません。</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function joinTournament() {
            try {
                const response = await fetch(`/tournaments/<%= tournament.id %>/join`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.error || 'エラーが発生しました。');
                }
            } catch (error) {
                console.error('Error joining tournament:', error);
                alert('ネットワークエラーが発生しました。');
            }
        }

        async function startTournament() {
            if (!confirm('大会を開始しますか？開始後は参加者の追加はできません。')) {
                return;
            }

            try {
                const response = await fetch(`/tournaments/<%= tournament.id %>/start`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.error || 'エラーが発生しました。');
                }
            } catch (error) {
                console.error('Error starting tournament:', error);
                alert('ネットワークエラーが発生しました。');
            }
        }

        async function startMatch(matchId) {
            try {
                const response = await fetch(`/tournaments/matches/${matchId}/start`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.error || 'エラーが発生しました。');
                }
            } catch (error) {
                console.error('Error starting match:', error);
                alert('ネットワークエラーが発生しました。');
            }
        }
    </script>

    <%
    function getStatusColor(status) {
        switch(status) {
            case 'upcoming': return 'primary';
            case 'active': return 'success';
            case 'completed': return 'secondary';
            case 'cancelled': return 'danger';
            default: return 'secondary';
        }
    }

    function getStatusText(status) {
        switch(status) {
            case 'upcoming': return '開催予定';
            case 'active': return '開催中';
            case 'completed': return '終了';
            case 'cancelled': return '中止';
            default: return '不明';
        }
    }

    function getMatchStatusColor(status) {
        switch(status) {
            case 'scheduled': return 'primary';
            case 'in_progress': return 'warning';
            case 'completed': return 'success';
            case 'cancelled': return 'danger';
            default: return 'secondary';
        }
    }

    function getMatchStatusText(status) {
        switch(status) {
            case 'scheduled': return '予定';
            case 'in_progress': return '進行中';
            case 'completed': return '完了';
            case 'cancelled': return '中止';
            default: return '不明';
        }
    }
    %>
</body>
</html>