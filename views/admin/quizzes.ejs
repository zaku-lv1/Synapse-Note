<%- include('../partials/header') %>

<div class="admin-container">
    <div class="admin-header">
        <h2 class="page-title">クイズ管理</h2>
        <p class="breadcrumb">
            <a href="/admin">管理者ダッシュボード</a> / クイズ管理
        </p>
    </div>

    <!-- メッセージ表示 -->
    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success">
        <%= message %>
    </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error">
        <%= error %>
    </div>
    <% } %>

    <!-- クイズ一覧 -->
    <div class="quizzes-table-container">
        <div class="table-header">
            <h3>クイズ一覧 (<%= quizzes.length %>件)</h3>
        </div>

        <!-- デスクトップ用テーブル表示 -->
        <div class="table-responsive desktop-table">
            <table class="quizzes-table">
                <thead>
                    <tr>
                        <th>タイトル</th>
                        <th>作成者</th>
                        <th>問題数</th>
                        <th>作成日</th>
                        <th>公開設定</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% quizzes.forEach(quiz => { %>
                    <tr>
                        <td>
                            <div class="quiz-title">
                                <strong><%= quiz.title || '無題のクイズ' %></strong>
                                <% if (quiz.description) { %>
                                <div class="quiz-description"><%= quiz.description.substring(0, 100) %>...</div>
                                <% } %>
                            </div>
                        </td>
                        <td><%= quiz.creatorName %></td>
                        <td><%= quiz.questions ? quiz.questions.length : 0 %>問</td>
                        <td>
                            <% if (quiz.createdAt && quiz.createdAt.seconds) { %>
                                <%= new Date(quiz.createdAt.seconds * 1000).toLocaleDateString('ja-JP') %>
                            <% } else { %>
                                不明
                            <% } %>
                        </td>
                        <td>
                            <span class="status-badge <%= quiz.visibility === 'public' ? 'public' : 'private' %>">
                                <%= quiz.visibility === 'public' ? '公開' : '非公開' %>
                            </span>
                        </td>
                        <td class="action-buttons">
                            <a href="/quiz/<%= quiz.id %>" 
                               class="btn btn-view" 
                               target="_blank">プレビュー</a>
                            <form method="POST" action="/admin/quizzes/<%= quiz.id %>/delete" 
                                  onsubmit="return confirm('このクイズを削除しますか？関連する挑戦履歴も削除されます。')" 
                                  style="display: inline;">
                                <button type="submit" class="btn btn-delete">削除</button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- モバイル用カード表示 -->
        <div class="mobile-cards">
            <% quizzes.forEach(quiz => { %>
            <div class="quiz-card">
                <div class="quiz-card-header">
                    <div class="quiz-main-info">
                        <h4 class="quiz-title"><%= quiz.title || '無題のクイズ' %></h4>
                        <% if (quiz.description) { %>
                        <p class="quiz-description"><%= quiz.description %></p>
                        <% } %>
                    </div>
                    <div class="quiz-status">
                        <span class="status-badge <%= quiz.visibility === 'public' ? 'public' : 'private' %>">
                            <%= quiz.visibility === 'public' ? '公開' : '非公開' %>
                        </span>
                    </div>
                </div>
                
                <div class="quiz-card-info">
                    <div class="info-row">
                        <div class="info-item">
                            <span class="info-label">作成者:</span>
                            <span class="info-value"><%= quiz.creatorName %></span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">問題数:</span>
                            <span class="info-value"><%= quiz.questions ? quiz.questions.length : 0 %>問</span>
                        </div>
                    </div>
                    <div class="info-item">
                        <span class="info-label">作成日:</span>
                        <span class="info-value">
                            <% if (quiz.createdAt && quiz.createdAt.seconds) { %>
                                <%= new Date(quiz.createdAt.seconds * 1000).toLocaleDateString('ja-JP') %>
                            <% } else { %>
                                不明
                            <% } %>
                        </span>
                    </div>
                </div>

                <div class="quiz-card-actions">
                    <a href="/quiz/<%= quiz.id %>" 
                       class="btn btn-view mobile-btn" 
                       target="_blank">
                        <span class="btn-icon">👁️</span>
                        <span class="btn-text">プレビュー</span>
                    </a>
                    <form method="POST" action="/admin/quizzes/<%= quiz.id %>/delete" 
                          onsubmit="return confirm('このクイズを削除しますか？関連する挑戦履歴も削除されます。')">
                        <button type="submit" class="btn btn-delete mobile-btn">
                            <span class="btn-icon">🗑️</span>
                            <span class="btn-text">クイズを削除</span>
                        </button>
                    </form>
                </div>
            </div>
            <% }); %>
        </div>

        <% if (quizzes.length === 0) { %>
        <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
            </svg>
            <h3>クイズがありません</h3>
            <p>まだクイズが作成されていません。</p>
        </div>
        <% } %>
    </div>

    <div class="admin-actions">
        <a href="/admin" class="btn btn-secondary">ダッシュボードに戻る</a>
    </div>
</div>

