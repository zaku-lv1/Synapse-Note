<%- include('../partials/header') %>

<div class="admin-container">
    <div class="admin-header">
        <h2 class="page-title">ユーザー管理</h2>
        <p class="breadcrumb">
            <a href="/admin">管理者ダッシュボード</a> / ユーザー管理
        </p>
    </div>

    <!-- メッセージ表示 -->
    <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success">
        <%= message %>
    </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-error">
        <%= error %>
    </div>
    <% } %>

    <!-- ユーザー一覧 -->
    <div class="users-table-container">
        <div class="table-header">
            <h3>ユーザー一覧 (<%= users.length %>人)</h3>
        </div>

        <!-- デスクトップ用テーブル表示 -->
        <div class="table-responsive desktop-table">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>ユーザー名</th>
                        <th>ハンドル</th>
                        <th>登録日</th>
                        <th>権限</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(userItem => { %>
                    <tr>
                        <td>
                            <div class="user-info">
                                <strong><%= userItem.username %></strong>
                                <% if (userItem.isAdmin) { %>
                                <span class="admin-badge">管理者</span>
                                <% } %>
                            </div>
                        </td>
                        <td><%= userItem.handle %></td>
                        <td>
                            <%= new Date(userItem.createdAt.seconds * 1000).toLocaleDateString('ja-JP') %>
                        </td>
                        <td>
                            <span class="role-badge <%= userItem.isAdmin ? 'admin' : 'user' %>">
                                <%= userItem.isAdmin ? '管理者' : '一般ユーザー' %>
                            </span>
                        </td>
                        <td class="action-buttons">
                            <% if (!userItem.isAdmin) { %>
                            <form method="POST" action="/admin/users/<%= userItem.id %>/promote" 
                                  onsubmit="return confirm('このユーザーを管理者に昇格させますか？')" 
                                  style="display: inline;">
                                <button type="submit" class="btn btn-promote">管理者に昇格</button>
                            </form>
                            <% } else if (userItem.id !== user.uid) { %>
                            <form method="POST" action="/admin/users/<%= userItem.id %>/demote" 
                                  onsubmit="return confirm('このユーザーの管理者権限を取り消しますか？')" 
                                  style="display: inline;">
                                <button type="submit" class="btn btn-demote">権限取り消し</button>
                            </form>
                            <% } else { %>
                            <span class="current-user">あなた</span>
                            <% } %>
                            
                            <% if (userItem.id !== user.uid) { %>
                            <form method="POST" action="/admin/users/<%= userItem.id %>/delete" 
                                  onsubmit="return confirm('⚠️ 警告: ユーザー「<%= userItem.username %>」とそのすべてのデータ（作成したクイズ、試行履歴など）を完全に削除します。\n\nこの操作は取り消すことができません。\n\n本当に削除しますか？')" 
                                  style="display: inline;">
                                <button type="submit" class="btn btn-delete">アカウント削除</button>
                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- モバイル用カード表示 -->
        <div class="mobile-cards">
            <% users.forEach(userItem => { %>
            <div class="user-card">
                <div class="user-card-header">
                    <div class="user-main-info">
                        <h4 class="username"><%= userItem.username %></h4>
                        <p class="handle"><%= userItem.handle %></p>
                    </div>
                    <div class="user-role">
                        <span class="role-badge <%= userItem.isAdmin ? 'admin' : 'user' %>">
                            <%= userItem.isAdmin ? '管理者' : '一般ユーザー' %>
                        </span>
                    </div>
                </div>
                
                <div class="user-card-info">
                    <div class="info-item">
                        <span class="info-label">登録日:</span>
                        <span class="info-value">
                            <%= new Date(userItem.createdAt.seconds * 1000).toLocaleDateString('ja-JP') %>
                        </span>
                    </div>
                </div>

                <div class="user-card-actions">
                    <% if (!userItem.isAdmin) { %>
                    <form method="POST" action="/admin/users/<%= userItem.id %>/promote" 
                          onsubmit="return confirm('このユーザーを管理者に昇格させますか？')">
                        <button type="submit" class="btn btn-promote mobile-btn">
                            <span class="btn-icon">⬆️</span>
                            <span class="btn-text">管理者に昇格</span>
                        </button>
                    </form>
                    <% } else if (userItem.id !== user.uid) { %>
                    <form method="POST" action="/admin/users/<%= userItem.id %>/demote" 
                          onsubmit="return confirm('このユーザーの管理者権限を取り消しますか？')">
                        <button type="submit" class="btn btn-demote mobile-btn">
                            <span class="btn-icon">⬇️</span>
                            <span class="btn-text">権限取り消し</span>
                        </button>
                    </form>
                    <% } else { %>
                    <div class="current-user-indicator">
                        <span class="btn-icon">👤</span>
                        <span class="btn-text">あなた</span>
                    </div>
                    <% } %>
                    
                    <% if (userItem.id !== user.uid) { %>
                    <form method="POST" action="/admin/users/<%= userItem.id %>/delete" 
                          onsubmit="return confirm('⚠️ 警告: ユーザー「<%= userItem.username %>」とそのすべてのデータ（作成したクイズ、試行履歴など）を完全に削除します。\n\nこの操作は取り消すことができません。\n\n本当に削除しますか？')">
                        <button type="submit" class="btn btn-delete mobile-btn">
                            <span class="btn-icon">🗑️</span>
                            <span class="btn-text">アカウント削除</span>
                        </button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="admin-actions">
        <a href="/admin" class="btn btn-secondary">ダッシュボードに戻る</a>
    </div>
</div>

<style>
.admin-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.admin-header {
    margin-bottom: 30px;
}

.breadcrumb {
    color: #666;
    font-size: 0.9em;
    margin-top: 8px;
}

.breadcrumb a {
    color: #4a90e2;
    text-decoration: none;
}

.breadcrumb a:hover {
    text-decoration: underline;
}

.alert {
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.alert-success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.users-table-container {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
    margin-bottom: 30px;
}

.table-header {
    background: #f8f9fa;
    padding: 20px;
    border-bottom: 1px solid #dee2e6;
}

.table-header h3 {
    margin: 0;
    color: #333;
}

.table-responsive {
    overflow-x: auto;
}

.users-table {
    width: 100%;
    border-collapse: collapse;
}

.users-table th,
.users-table td {
    padding: 16px;
    text-align: left;
    border-bottom: 1px solid #dee2e6;
}

.users-table th {
    background: #f8f9fa;
    font-weight: 600;
    color: #495057;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 8px;
}

.admin-badge {
    background: #4a90e2;
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75em;
    font-weight: 500;
}

.role-badge {
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 0.85em;
    font-weight: 500;
}

.role-badge.admin {
    background: #d4edda;
    color: #155724;
}

.role-badge.user {
    background: #e2e3e5;
    color: #495057;
}

.action-buttons {
    display: flex;
    gap: 8px;
    align-items: center;
}

.btn {
    padding: 6px 12px;
    border: none;
    border-radius: 6px;
    font-size: 0.85em;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: background-color 0.2s;
}

.btn-promote {
    background: #28a745;
    color: white;
}

.btn-promote:hover {
    background: #218838;
}

.btn-demote {
    background: #dc3545;
    color: white;
}

.btn-demote:hover {
    background: #c82333;
}

.btn-delete {
    background: #dc3545;
    color: white;
    border: 1px solid #dc3545;
}

.btn-delete:hover {
    background: #c82333;
    border-color: #bd2130;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

.btn-secondary:hover {
    background: #545b62;
}

.current-user {
    color: #666;
    font-style: italic;
    font-size: 0.85em;
}

.admin-actions {
    text-align: center;
}

/* Mobile card layout styles */
.mobile-cards {
    display: none;
}

.desktop-table {
    display: block;
}

.user-card {
    background: white;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border: 1px solid #e9ecef;
}

.user-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
    gap: 12px;
}

.user-main-info {
    flex: 1;
    min-width: 0;
}

.user-main-info .username {
    margin: 0 0 4px 0;
    font-size: 1.1em;
    font-weight: 600;
    color: #333;
    word-wrap: break-word;
}

.user-main-info .handle {
    margin: 0;
    color: #666;
    font-size: 0.9em;
    word-wrap: break-word;
}

.user-role {
    flex-shrink: 0;
}

.user-card-info {
    margin-bottom: 20px;
    padding: 12px 0;
    border-top: 1px solid #f1f3f4;
    border-bottom: 1px solid #f1f3f4;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
}

.info-label {
    font-weight: 500;
    color: #666;
    font-size: 0.9em;
    flex-shrink: 0;
}

.info-value {
    color: #333;
    font-size: 0.9em;
    text-align: right;
}

.user-card-actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.mobile-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 8px;
    font-size: 0.9em;
    font-weight: 500;
    min-height: 44px; /* iOS recommended touch target */
    width: 100%;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-icon {
    font-size: 1.1em;
    flex-shrink: 0;
}

.btn-text {
    flex: 1;
    text-align: center;
}

.current-user-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    background: #f8f9fa;
    color: #666;
    border-radius: 8px;
    font-style: italic;
    font-size: 0.9em;
    min-height: 44px;
}

/* Mobile responsive styles */
@media (max-width: 768px) {
    .admin-container {
        padding: 16px;
    }
    
    .desktop-table {
        display: none;
    }
    
    .mobile-cards {
        display: block;
    }
    
    .admin-header {
        margin-bottom: 24px;
    }
    
    .admin-header .page-title {
        font-size: 1.5em;
    }
    
    .breadcrumb {
        font-size: 0.85em;
    }
    
    .users-table-container {
        margin-bottom: 24px;
    }
    
    .table-header {
        padding: 16px;
    }
    
    .table-header h3 {
        font-size: 1.1em;
    }
    
    /* Button color overrides for mobile */
    .mobile-btn.btn-promote {
        background: #28a745;
        color: white;
    }
    
    .mobile-btn.btn-promote:hover {
        background: #218838;
    }
    
    .mobile-btn.btn-demote {
        background: #dc3545;
        color: white;
    }
    
    .mobile-btn.btn-demote:hover {
        background: #c82333;
    }
    
    .mobile-btn.btn-delete {
        background: #dc3545;
        color: white;
    }
    
    .mobile-btn.btn-delete:hover {
        background: #c82333;
    }
    
    /* Improve role badges on mobile */
    .role-badge {
        font-size: 0.8em;
        padding: 4px 8px;
        white-space: nowrap;
    }
}

/* Keep existing styles for desktop */
@media (min-width: 769px) {
    .users-table th,
    .users-table td {
        padding: 12px 8px;
        font-size: 0.9em;
    }
    
    .action-buttons {
        flex-direction: column;
        gap: 4px;
    }
    
    .btn {
        font-size: 0.8em;
        padding: 4px 8px;
    }
}
</style>

<%- include('../partials/footer') %>