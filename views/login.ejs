<%
// SEO metadata for login page
const pageTitle = 'ログイン - Synapse Note | AI学習アプリ';
const pageDescription = 'Synapse Noteにログインして、AIが生成するオリジナル問題集で学習を始めましょう。既存のアカウントでサインインできます。';
const pageKeywords = 'ログイン,サインイン,AI学習,アカウント,Synapse Note';
const pageRobots = 'noindex,nofollow';
const canonicalUrl = 'https://synapse-note.vercel.app/login';
const ogType = 'website';
%>
<%- include('partials/header') %>

<main>
    <div class="auth-container">
        <h2 class="page-title">ログイン</h2>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>

        <form action="/login" method="POST">
            <div class="form-group">
                <label for="handle">ハンドル名</label>
                <input type="text" id="handle" name="handle" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">パスワード</label>
                <input type="password" id="password" name="password" required autocomplete="off">
            </div>
            <button type="submit">ログイン</button>
        </form>

        <p class="form-footer-text">
            アカウントをお持ちでないですか？ <a href="/register">新規登録はこちら</a>
        </p>
    </div>
</main>

<%- include('partials/footer') %>